<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/calendario.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link  rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <title>LABSOUT</title>
    <style>
       .navbar a {
            color: #fff;
            text-decoration: none;
        }
        .navbar a:hover {
            color: #ddd; 
        }
        .navbar-title {
            color: #fff;
            font-size: 20px;
            margin-left: 10px; 
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-lado">
            <a href="/inicialusuario" class="navbar-icon">
                <i class="bi bi-calendar2-week"></i>
            </a>
            <span class="navbar-title"><strong>LABSOUT</strong></span>
        </div>
    </nav>
    <div id='calendar'></div>
    <div class="container">
        <div class="calendar-container">
            <div class="calendar-header">
                <button class="prev-month">&#10094;</button>
                <h2 id="month-year"></h2>
                <button class="next-month">&#10095;</button>
            </div>
            <table class="calendar">
                <thead>
                    <tr>
                        <th>Dom</th>
                        <th>Seg</th>
                        <th>Ter</th>
                        <th>Qua</th>
                        <th>Qui</th>
                        <th>Sex</th>
                        <th>Sáb</th>
                    </tr>
                </thead>
                <tbody id="calendar-body">
                    <!-- Dias serão gerados dinamicamente -->
                </tbody>
            </table>
        </div>
    </div>  
    <script>
        const nomesMeses = ["Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho", "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro"];
        let dataAtual = new Date();

        function renderizarCalendario() {
            const mesAno = document.getElementById("month-year");
            const corpoCalendario = document.getElementById("calendar-body");

            const ano = dataAtual.getFullYear();
            const mes = dataAtual.getMonth();
            
            mesAno.innerHTML = `${nomesMeses[mes]} ${ano}`;
            
            // Limpa o corpo do calendário
            corpoCalendario.innerHTML = "";

            // Obtém o primeiro dia do mês
            const primeiroDia = new Date(ano, mes, 1).getDay();
            const diasNoMes = new Date(ano, mes + 1, 0).getDate();
            const diasMesAnterior = new Date(ano, mes, 0).getDate();
            
            let dia = 1;
            let diaProximoMes = 1;

            // Cria as linhas da tabela
            for (let i = 0; i < 6; i++) {
                const linha = document.createElement("tr");

                for (let j = 0; j < 7; j++) {
                    const td = document.createElement("td");

                    // Preenche os dias do mês anterior
                    if (i === 0 && j < primeiroDia) {
                        td.innerText = diasMesAnterior - (primeiroDia - j - 1);
                        td.classList.add("disabled");
                    } else if (dia > diasNoMes) {
                        // Preenche os dias do próximo mês
                        td.innerText = diaProximoMes++;
                        td.classList.add("disabled");
                    } else {
                        // Preenche os dias do mês atual
                        td.innerText = dia;
                        if (dia === dataAtual.getDate()) {
                            td.classList.add("today");
                        }
                        dia++;
                    }

                    linha.appendChild(td);
                }

                corpoCalendario.appendChild(linha);
            }
        }

        // Função para alterar o mês
        document.querySelector(".prev-month").addEventListener("click", () => {
            dataAtual.setMonth(dataAtual.getMonth() - 1);
            renderizarCalendario();
        });

        document.querySelector(".next-month").addEventListener("click", () => {
            dataAtual.setMonth(dataAtual.getMonth() + 1);
            renderizarCalendario();
        });

        // Renderiza o calendário ao carregar a página
        renderizarCalendario();

    </script>
    
    <div class="status-info">
    <div class="status">
        <span class="dot orange"></span> Parcialmente Disponível
    </div>
    <div class="status">
        <span class="dot red"></span> Ocupado
    </div>
</div>
</body>
</html>
