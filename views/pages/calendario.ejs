<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/calendario.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/6.1.4/fullcalendar.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>LABSOUT</title>
    <style>
       .navbar a {
            color: #fff;
            text-decoration: none;
        }
        .navbar a:hover {
            color: #ddd; 
        }
        .navbar-title {
            color: #fff;
            font-size: 20px;
            margin-left: 10px; 
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-lado">
            <a href="/inicialusuario" class="navbar-icon">
                <i class="bi bi-calendar2-week"></i>
            </a>
            <span class="navbar-title"><strong>LABSOUT</strong></span>
        </div>
    </nav>
    <div id='calendar'></div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/6.1.4/fullcalendar.min.js"></script>

    <div class="container">
        <div class="calendar-container">
            <div class="calendar-header">
                <button class="prev-month">&#10094;</button>
                <h2 id="month-year"></h2>
                <button class="next-month">&#10095;</button>
            </div>
            <table class="calendar">
                <thead>
                    <tr>
                        <th>Dom</th>
                        <th>Seg</th>
                        <th>Ter</th>
                        <th>Qua</th>
                        <th>Qui</th>
                        <th>Sex</th>
                        <th>Sáb</th>
                    </tr>
                </thead>
                <tbody id="calendar-body">
                    <!-- Dias serão gerados dinamicamente -->
                </tbody>
            </table>
        </div>
    </div>  
    <script>
        const monthNames = ["Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho", "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro"];
        let currentDate = new Date();

        function renderCalendar() {
            const monthYear = document.getElementById("month-year");
            const calendarBody = document.getElementById("calendar-body");

            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            monthYear.innerHTML = `${monthNames[month]} ${year}`;
            
            // Limpa o corpo do calendário
            calendarBody.innerHTML = "";

            // Obtém o primeiro dia do mês
            const firstDay = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const prevMonthDays = new Date(year, month, 0).getDate();
            
            let date = 1;
            let nextMonthDate = 1;

            // Cria as linhas da tabela
            for (let i = 0; i < 6; i++) {
                const row = document.createElement("tr");

                for (let j = 0; j < 7; j++) {
                    const cell = document.createElement("td");

                    // Preenche os dias do mês anterior
                    if (i === 0 && j < firstDay) {
                        cell.innerText = prevMonthDays - (firstDay - j - 1);
                        cell.classList.add("disabled");
                    } else if (date > daysInMonth) {
                        // Preenche os dias do próximo mês
                        cell.innerText = nextMonthDate++;
                        cell.classList.add("disabled");
                    } else {
                        // Preenche os dias do mês atual
                        cell.innerText = date;
                        if (date === currentDate.getDate()) {
                            cell.classList.add("today");
                        }
                        date++;
                    }

                    row.appendChild(cell);
                }

                calendarBody.appendChild(row);
            }
        }

        // Função para alterar o mês
        document.querySelector(".prev-month").addEventListener("click", () => {
            currentDate.setMonth(currentDate.getMonth() - 1);
            renderCalendar();
        });

        document.querySelector(".next-month").addEventListener("click", () => {
            currentDate.setMonth(currentDate.getMonth() + 1);
            renderCalendar();
        });

        // Renderiza o calendário ao carregar a página
        renderCalendar();
    </script>
    
    <div class="status-info">
    <div class="status">
        <span class="dot orange"></span> Parcialmente Disponível
    </div>
    <div class="status">
        <span class="dot red"></span> Ocupado
    </div>
</div>
</body>
</html>
