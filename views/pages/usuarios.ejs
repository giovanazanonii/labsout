<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LABSOUT</title>
    <link rel="stylesheet" href="/css/usuarios.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Usuários</h1>
        </header>
    </div>
    <div class="container2">
        <section class="reservas">
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Senha</th>
                            <th>CPF</th>
                            <th>Tipo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>
            </div>
        </section>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            fetch('/usuarios/listar')
                .then(response => response.json())
                .then(listar => {
                    const tbody = document.querySelector('tbody');
                    tbody.innerHTML = '';
    
                    listar.forEach(usuario => {
                        const tr = document.createElement('tr');
                        tr.dataset.id = usuario.cpf;
    
                        tr.innerHTML = `
                            <td>${usuario.nome}</td>
                            <td>${usuario.senha}</td>
                            <td>${usuario.cpf}</td>
                            <td>${usuario.tipo}</td>
                            <td class="action-cell">
                                <button class="deletar-button"><i class="bi bi-trash3"></i></button>
                            </td>
                        `;
                        tbody.appendChild(tr);
                    });
    
                    //deletando user :pp
                    document.querySelectorAll('.deletar-button').forEach(button => {
                        button.addEventListener('click', function () {
                            const row = this.closest('tr');
                            const id = row.dataset.id;
                            if (confirm('Tem certeza que deseja excluir este usuário?')) {
                                fetch(`/usuarios/deletar/${id}`, {
                                    method: 'DELETE'
                                })
                                .then(response => {
                                    if (response.ok) {
                                        row.remove(); // remove a linha da tabela
                                    } else {
                                        return response.json().then(data => {
                                            alert(data.message || 'Erro ao excluir o usuário.');
                                        });
                                    }
                                })
                                .catch(error => {
                                    console.error('Erro ao excluir o usuário:', error);
                                    alert('Erro ao excluir o usuário.');
                                });
                            }
                        });
                    });
                })
                .catch(error => {
                    console.error('Erro ao carregar dados:', error);
                });
        });
    </script>
</body>
</html>
